@using Bulky.Models.Dtos;
@model Product;

<form method="post">
    <input asp-for="Id" hidden />
    @* the id is Id so we do not need itclude this input. if key was categoryId we need to include it *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete category</h2>
            <hr />
        </div>  
        <div class="mb-3 row p-1">
            <label class="p-0">Title</label>
            <input asp-for="Title"  class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">ISNB</label>
            <input asp-for="ISBN"  class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Description</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Author</label>
            <input asp-for="Author" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">List Price</label>
            <input asp-for="ListPrice" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Price</label>
            <input asp-for="Price" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Price for 1-50</label>
            <input asp-for="Price50" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Price for 50+</label>
            <input asp-for="Price50" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Price for 100</label>
            <input asp-for="Price100" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>



