@model Product;

<div class="detail-section" > 
    <aside class="detail-Leftside" >
        <a href="#" Class="detail__backhome btn btn-info">Back To Home</a>
        <div class="detail__img">  
            <img src="@Model.ImageUrl" />
        </div>
       
    </aside>
    <div class="content" style="padding:1rem; width:75%;">
        <div class="content__header">
           @Model.Category.Name
        </div>
         <p>
            <div class="content__Item Text-dark-gray">ISBN:@Model.ISBN</div>
            <div class="content__Item text-dark-grey ">List Price: @Model.ListPrice</div>
            <div>
                <table class="content__table" >
                    <thead>
                        <tr>
                            <th>Quantity</th>
                            <th>1-50</th>
                            <th>51-100</th>
                            <th>100+</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table__row">
                            <td></td>
                            <td>@Model.Price</td>
                            <td>@Model.Price</td>
                            <td>@Model.Price50</td>
                            <td>@Model.Price100</td>
                        </tr>               
                    </tbody>                                          
                </table>
            </div>
        </p> 
        <p class="content__paragraph">
            @Html.Raw(Model.Description)
        </p>
        <div  class="input__group">
            <span class="btn btn-dark">Count</span>
            <input type="number" class="input__number" />
        </div>

        <div class="btn btn-outline-dark btn__Add-Card">ADD TO CARD(Coming soon)</div>
    </div>
</div>